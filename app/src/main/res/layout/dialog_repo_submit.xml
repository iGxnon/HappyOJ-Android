<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
        app:color="?colorPrimaryVariant"
        android:id="@+id/til_repo"
        app:boxBackgroundColor="?colorPrimaryVariant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:hintTextColor="?colorOnPrimary"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:textColorHint="?colorOnPrimary">
        <EditText
            android:id="@+id/et_repo_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:hint="仓库 URL"
            android:textColorHint="?colorOnPrimary"
            android:inputType="textUri"
            tools:ignore="HardcodedText,LabelFor" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        app:color="?colorPrimaryVariant"
        android:id="@+id/til_desc"
        app:boxBackgroundColor="?colorPrimaryVariant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:hintTextColor="?colorOnPrimary"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:textColorHint="?colorOnPrimary">
        <EditText
            android:id="@+id/et_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:hint="想说的话"
            android:textColorHint="?colorOnPrimary"
            android:inputType="textUri"
            tools:ignore="HardcodedText,LabelFor" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_marginVertical="10dp"
        android:textSize="16sp"
        android:textColor="?colorOnPrimary"
        android:layout_marginHorizontal="15dp"
        android:text="仓库类型"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />
    <Spinner
        android:id="@+id/sp_repo_type"
        android:background="?colorPrimaryVariant"
        android:layout_marginHorizontal="15dp"
        android:spinnerMode="dropdown"
        android:entries="@array/repo_types"
        android:layout_width="match_parent"
        android:layout_height="50dp" />


</LinearLayout>
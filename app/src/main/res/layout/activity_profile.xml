<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?colorPrimaryVariant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.LabActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:titleEnabled="true"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
            app:contentScrim="?colorPrimary"
            app:collapsedTitleTextColor="?colorOnPrimary"
            app:collapsedTitleGravity="left"
            app:scrimAnimationDuration="500"
            app:expandedTitleTextColor="?colorOnPrimary"
            app:expandedTitleGravity="bottom|left"
            app:expandedTitleMarginStart="15dp"
            app:expandedTitleMarginBottom="40dp"
            tools:title="iGxnon"
            android:paddingTop="0dp">

            <ImageView
                android:fitsSystemWindows="true"
                android:id="@+id/iv_header"
                tools:src="@drawable/test_avatar"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/iv_bg_tint"
                android:background="@color/pink_bg_tint"
                app:layout_collapseMode="parallax"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="ContentDescription" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_marginTop="30dp"
                app:menu="@menu/profile_menu"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:titleTextColor="?colorOnPrimary" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:background="?colorPrimaryVariant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="?colorPrimary"
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:orientation="vertical"
                        android:paddingVertical="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="?colorOnPrimary"
                            android:paddingStart="13dp"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="账户"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="HardcodedText,RtlSymmetry" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/account_username"
                            android:background="?attr/selectableItemBackground"
                            android:paddingVertical="9dp"
                            android:orientation="vertical"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_username"
                                android:textSize="15sp"
                                android:paddingVertical="8dp"
                                android:paddingStart="15dp"
                                android:textStyle="bold"
                                android:textColor="?colorOnPrimary"
                                tools:text="iGxnon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="RtlSymmetry" />

                            <TextView
                                android:textSize="14sp"
                                android:paddingStart="15dp"
                                android:text="用户名"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText,RtlSymmetry" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <View
                            android:layout_marginHorizontal="15dp"
                            android:background="?colorPrimaryVariant"
                            android:layout_width="match_parent"
                            android:layout_height="1dp" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/account_github"
                            android:background="?attr/selectableItemBackground"
                            android:paddingVertical="9dp"
                            android:orientation="vertical"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_name"
                                android:textSize="15sp"
                                android:paddingVertical="8dp"
                                android:paddingStart="15dp"
                                android:textStyle="bold"
                                android:textColor="?colorOnPrimary"
                                tools:text="Cherry"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="RtlSymmetry" />

                            <TextView
                                android:textSize="14sp"
                                android:paddingStart="15dp"
                                android:text="姓名"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText,RtlSymmetry" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <View
                            android:layout_marginHorizontal="15dp"
                            android:background="?colorPrimaryVariant"
                            android:layout_width="match_parent"
                            android:layout_height="1dp" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/account_stu_id"
                            android:background="?attr/selectableItemBackground"
                            android:paddingVertical="9dp"
                            android:orientation="vertical"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_stu_id"
                                android:textSize="15sp"
                                android:paddingVertical="8dp"
                                android:paddingStart="15dp"
                                android:textStyle="bold"
                                android:textColor="?colorOnPrimary"
                                tools:text="114514"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="RtlSymmetry" />

                            <TextView
                                android:textSize="14sp"
                                android:paddingStart="15dp"
                                android:text="学号"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText,RtlSymmetry" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <View
                            android:layout_marginHorizontal="15dp"
                            android:background="?colorPrimaryVariant"
                            android:layout_width="match_parent"
                            android:layout_height="1dp" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/account_email"
                            android:background="?attr/selectableItemBackground"
                            android:paddingVertical="9dp"
                            android:orientation="vertical"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_email"
                                android:textSize="15sp"
                                android:paddingVertical="8dp"
                                android:paddingStart="15dp"
                                android:textStyle="bold"
                                android:textColor="?colorOnPrimary"
                                tools:text="114514@xiabeize.com"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="RtlSymmetry" />

                            <TextView
                                android:textSize="14sp"
                                android:paddingStart="15dp"
                                android:text="邮箱"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText,RtlSymmetry" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <View
                            android:layout_marginHorizontal="15dp"
                            android:background="?colorPrimaryVariant"
                            android:layout_width="match_parent"
                            android:layout_height="1dp" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="?colorPrimary"
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:orientation="vertical"
                        android:paddingVertical="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="?colorOnPrimary"
                            android:paddingStart="13dp"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="设置"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="HardcodedText,RtlSymmetry" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/setting_day_night"
                            android:background="?attr/selectableItemBackground"
                            android:paddingVertical="8dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv_icon_day_night"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:paddingVertical="8dp"
                                android:paddingStart="15dp"
                                android:src="@drawable/ic_day_night_24"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="ContentDescription,RtlSymmetry" />

                            <TextView
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@id/iv_icon_day_night"
                                android:textSize="15sp"
                                android:paddingVertical="8dp"
                                android:paddingStart="15dp"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="?colorOnPrimary"
                                android:text="黑夜模式"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText,RtlSymmetry" />

                            <TextView
                                android:id="@+id/tv_day_night_mode"
                                android:layout_marginEnd="15dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:text="手动调节"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <View
                            android:layout_marginStart="50dp"
                            android:layout_marginEnd="15dp"
                            android:background="?colorPrimaryVariant"
                            android:layout_width="match_parent"
                            android:layout_height="1dp" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </com.google.android.material.card.MaterialCardView>


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>